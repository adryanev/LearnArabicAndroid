<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity"
    android:background="#fff">

    <ImageView
        android:id="@+id/gambarUin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_uin"
        android:layout_centerInParent="true"/>


    <TextView
        android:layout_below="@id/gambarUin"
        android:layout_marginTop="20dp"
        android:id="@+id/namaApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Arabic"
        android:layout_marginBottom="32dp"
        android:textSize="32sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        android:textColor="#000"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/credit"
        android:layout_below="@+id/namaApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inkubator Teknik Informatika UIN SUSKA RIAU"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"/>
</RelativeLayout>
