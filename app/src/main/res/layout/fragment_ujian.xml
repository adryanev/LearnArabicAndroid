<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg3"

    >
    <android.support.v7.widget.CardView
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        app:cardBackgroundColor="#ffffffdf"
        app:cardCornerRadius="10dp"
       >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tv_info_ujian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Untuk Melaksanakan Ujian, Anda harus Terhubung ke Internet."
                android:textSize="8pt"
                android:layout_marginBottom="3dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anda Akan mengerjakan Ujian, apakah anda yakin?"
                android:textAlignment="center"
                android:textSize="8pt"
                android:id="@+id/tv_info_ujian2"
                android:layout_below="@id/tv_info_ujian"
                />

            <Button
                android:id="@+id/btn_kerjakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_info_ujian2"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:textColor="#fff"
                android:elevation="10dp"
                android:text="Ikuti Ujian"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
